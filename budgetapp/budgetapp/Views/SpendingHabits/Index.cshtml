@model IEnumerable<budgetapp.Models.SpendingHabits>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WeekOf)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WeekTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BudgetBalance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CashTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssetTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountTotal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.WeekOf)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WeekTotal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BudgetBalance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CashTotal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AssetTotal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountTotal)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>

<br />

    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>

    <center><div id="chartContainer" style="height: 100%; width: 75%;"></div></center>

    <script type="text/javascript">

		window.onload = function () {
			var chart = new CanvasJS.Chart("chartContainer", {
				theme: "theme2",
				animationEnabled: true,
				title: {
					text: "Savings Over Time in Weeks"
                },
                axisY: {
                    title: "Savings ($)"
                },
                axisX: {
                    title: "Week Number"
                },
				//subtitles: [
				//	{ text: "Try Resizing the Browser" }
				//],
				data: [
				{
					type: "line", //change type to bar, line, area, pie, etc
					dataPoints: [
					{ x: 1, y: 1000 },
					{ x: 2, y: 1500 },
					{ x: 3, y: 1600 },
					{ x: 4, y: 2600 },
					{ x: 5, y: 2100 },
					{ x: 6, y: 2800 },
					{ x: 7, y: 3900 },
					{ x: 8, y: 4000 },
					{ x: 9, y: 4500 }
					]
                                        //Uncomment below line to add data coming from the controller.
					@*dataPoints: @Html.Raw(ViewBag.DataPoints),*@
				}
				]
			});
			chart.render();
		};
</script>


